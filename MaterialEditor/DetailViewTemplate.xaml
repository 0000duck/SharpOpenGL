<ResourceDictionary  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MaterialEditor">
    <DataTemplate DataType="{x:Type local:NetworkViewModel}">
        <Grid>
            <TextBlock Text="Default Model Template"></TextBlock>
        </Grid>
    </DataTemplate>

    <DataTemplate DataType="{x:Type local:ConstantVector3Node}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>            
            <Grid Grid.Row="0">
                <TextBlock Text="{Binding Name}"></TextBlock>                
            </Grid>
            <Grid Grid.Row="1">
                <TextBlock Text="{Binding X}"></TextBlock>
            </Grid>
            <Grid Grid.Row="2">
                <TextBlock Text="{Binding Y}"></TextBlock>
            </Grid>
            <Grid Grid.Row="3">
                <TextBlock Text="{Binding Z}"></TextBlock>
            </Grid>
        </Grid>
    </DataTemplate>
</ResourceDictionary>


    